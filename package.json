{
  "name": "typyst",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:app": "turbo run build --filter=app",
    "dev": "turbo run dev",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:app": "cd apps/app && vercel --prod",
    "deploy:preview:web": "cd apps/web && vercel",
    "deploy:preview:app": "cd apps/app && vercel",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typyst/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "lint-staged": {
    "*.{svelte,js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
